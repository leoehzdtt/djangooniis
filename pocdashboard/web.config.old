<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Desbloquear handlers antes con appcmd -->
    <handlers>
      <add name="ReverseProxyHandler"
           path="*"
           verb="*"
           modules="RewriteModule"
           resourceType="Unspecified"
           requireAccess="None" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="ReverseProxyToWaitress" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite"
                  url="http://127.0.0.1:8000/{R:1}" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>